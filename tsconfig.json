/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@base/*": [
        "src/base/*"
      ],
      "@pages/*": [
        "./src/app/pages/*"
      ],
      "@features/*": [
        "./src/app/features/*"
      ],
      "@resolvers/*": [
        "./src/app/core/resolvers/*"
      ],
      "@services/*": [
        "./src/app/core/services/*"
      ],
      "@models/*": [
        "src/app/core/models/*"
      ],
      "@interceptors/*": [
        "src/app/core/interceptors/*"
      ],
      "@auth/*": [
        "src/app/core/auth/*"
      ],
      "@guards/*": [
        "src/app/core/guards/*"
      ],
      "@pipes/*": [
        "src/app/core/pipes/*"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@environments/*": [
        "./src/environments/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
